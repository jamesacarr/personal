{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2021"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/contact/*": ["src/contact/*"],
      "@/lib/*": ["src/lib/*"]
    },
    "plugins": [{ "name": "next" }],
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2021"
  },
  "exclude": ["node_modules"],
  "include": [".next/types/**/*.ts", "src/**/*.ts*", "vitest", "./*.ts"]
}
